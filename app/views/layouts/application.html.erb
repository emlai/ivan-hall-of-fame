<!DOCTYPE html>
<html>
  <head>
    <title>IVAN Hall of Fame</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/list.js/1.5.0/list.min.js' %>
  </head>

  <body>
    <nav>
      <%= link_to 'Scores', root_path %>
      <%= link_to 'Players', players_path %>
      <%= link_to 'Versions', versions_path %>
      <%= link_to 'Sign up', signup_path %>
    </nav>
    <% if notice %>
      <p id="notice"><%= notice %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
